FROM node:12.2.0-alpine as build-stage
WORKDIR /app
ENV PATH /app/node_modules/.bin:$PATH
RUN pwd
RUN ls
COPY ./frontend/package.json /app/package.json
RUN ls -l
RUN npm install
COPY ./frontend /app
RUN npm run build

FROM nginx:latest as production-stage
RUN mkdir /appp
COPY --from=build-stage /app/dist /appp
COPY ./frontend/local-nginx.conf /etc/nginx/conf.d
COPY ./frontend/local-nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
