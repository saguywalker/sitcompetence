FROM node:10.15.3 as build-stage
WORKDIR /app
COPY ./frontend/package*.json ./
RUN yarn
COPY ./frontend/ ./
RUN yarn build

FROM nginx:latest
RUN mkdir /app
COPY --from=build-stage /app/dist /app
RUN ls -l /app 
RUN rm -rf /etc/nginx/conf.d/default.conf
#COPY ./frontend/orig.conf /etc/nginx/nginx.conf
COPY ./frontend/default.conf /etc/nginx/conf.d
#COPY ./frontend/nginx.conf /etc/nginx/nginx.conf
#COPY ./frontend/nginx.crt /etc/nginx/nginx.crt
#COPY ./frontend/nginx.key /etc/nginx/nginx.key
EXPOSE 80
#EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]
